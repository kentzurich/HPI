@model GallerySection

<partial name="Admin/_AdminSidebar" />

<div class="pagetitle">
    <h1>Gallery Section</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="GallerySection" asp-action="Index">Gallery Section</a></li>
            <li class="breadcrumb-item">Add New Image</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow border-0 w-75 top-50 start-50 translate-middle">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">Add New Image</h5>
                        </div>
                    </div>

                    <section class="section">
                        <form method="post" asp-action="Create" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-floating py-2 col-12">
                                        <input multiple type="file" name="imgFile" id="imgFile" class="form-control border-0 shadow" placeholder="Enter imgFile" />
                                        <label class="ms-2 text-muted">Image URL</label>
                                        <span class="badge bg-danger">Note: size of an images must be 800x600.</span>
                                    </div>
                                    <div class="row pt-2">
                                        <div class="col-6 col-md-3">
                                            <button onclick="return ValidateInputImg();" type="submit" class="btn btn-primary form-control">
                                                <i class="bi bi-plus-circle"></i> &nbspAdd
                                            </button>
                                        </div>
                                        <div class="col-6 col-md-3">
                                            <a asp-controller="GallerySection" asp-action="Index" class="btn btn-outline-primary form-control">
                                                <i class="bi bi-backspace"></i> &nbspBack
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"></partial>
    <script src="~/js/admin/gallerysection.js"></script>
}
