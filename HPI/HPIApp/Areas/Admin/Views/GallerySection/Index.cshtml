@model IEnumerable<GallerySection>

<partial name="Admin/_AdminSidebar" />

<div class="pagetitle">
    <h1>Gallery Section</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">Gallery Section</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow border-0 mt-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">Gallery List</h5>
                        </div>

                        <div class="col-6 text-end">
                            <a asp-controller="GallerySection" asp-action="Create" class="btn btn-primary mt-3">
                                <i class="bi bi-plus-circle"></i> &nbspAdd New Image
                            </a>
                        </div>
                    </div>
                    </br></br>

                    <div class="lightbox">
                       
                        <div class="row" id="imageRow">
                            @if (Model.Count() > 0)
                            {
                                foreach (var image in Model)
                                {
                                    <div class="col-lg-4">
                                        <a href="#">
                                            <img src="@image.ImgUrl" class="w-100" style="border-radius:5px; border:1px solid #bbb9b9;" />
                                        </a>
                                        <div class="text-center">
                                            <a onclick="return Delete(@image.Id, this);" class="btn btn-danger my-2" width="100%">
                                                <i class="bi bi-trash"></i> &nbspDelete
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-lg-4">
                                    <a href="#">
                                        <img src="https://placehold.co/800x600/png" class="w-100" style="border-radius:5px; border:1px solid #bbb9b9;" />
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script src="~/js/admin/gallerysection.js"></script>
}