@model HeroSection

<partial name="Admin/_AdminSidebar" />

<div class="pagetitle">
    <h1>Hero Section</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">Hero Section</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow border-0 w-75 top-50 start-50 translate-middle">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">Update Hero Section</h5>
                        </div>
                    </div>

                    <section class="section">
                        <form method="post" asp-action="UpsertHeroSection" enctype="multipart/form-data">
                            <input asp-for="Id" hidden />
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-floating col-12 d-flex aligns-items-center justify-content-center">

                                        <div class="w-50 d-flex aligns-items-center justify-content-center">
                                            @if (!String.IsNullOrEmpty(Model.backgroundImgUrl))
                                            {
                                                <img src="@Model.backgroundImgUrl" id="imgDisplay" style="border-radius:5px; border:1px solid #bbb9b9; width: 600px; height: 200px;" />
                                            }
                                            else
                                            {
                                                <img src="https://placehold.co/1920x846/png" id="imgDisplay" style="border-radius:5px; border:1px solid #bbb9b9; width: 600px; height: 200px;" />
                                            }
                                        </div>

                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="Header1" class="form-control border-0 shadow" placeholder="Enter Header1" />
                                        <label asp-for="Header1" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="Header1" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="Header2" class="form-control border-0 shadow" placeholder="Enter Header2" />
                                        <label asp-for="Header2" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="Header2" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input onchange="return DisplayImg()" type="file" name="imgFile" id="imgFile" class="form-control border-0 shadow" />
                                        <label class="ms-2 text-muted">Background Image</label>
                                        <span class="badge bg-danger">Note: size of an images must be 1920x846.</span>
                                        <span asp-validation-for="backgroundImgUrl" class="text-danger"></span>
                                    </div>
                                    <div class="row pt-2">
                                        <div class="col-6 col-md-3">
                                            <button type="submit" class="btn btn-primary form-control">
                                                <i class="bi bi-plus-circle"></i> &nbspUpdate
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"></partial>
    <script>
        function DisplayImg() {
            let img = document.getElementById("imgDisplay");
            let imgFile = document.getElementById("imgFile");

            if (imgFile.files[0])
                img.src = URL.createObjectURL(imgFile.files[0]);
        }
    </script>
}
