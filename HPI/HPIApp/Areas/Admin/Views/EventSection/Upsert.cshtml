@model EventsSection

<partial name="Admin/_AdminSidebar" />

<div class="pagetitle">
    <h1>Event Section</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">Event Us Section</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow border-0 w-75 top-50 start-50 translate-middle">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">Update Event Section</h5>
                        </div>
                    </div>

                    <section class="section">
                        <form method="post" asp-action="Upsert">
                            <input asp-for="Id" hidden />
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-floating py-2 col-12">
                                        <textarea asp-for="EventDescription" rows="3" class="form-control border-0 shadow" placeholder="Enter EventDescription"></textarea>
                                        <label asp-for="EventDescription" class="ms-2 text-muted"></label>
                                        <span asp-validation-for="EventDescription" class="text-danger"></span>
                                    </div>
                                    <div class="row pt-2">
                                        <div class="col-6 col-md-3">
                                            <button type="submit" class="btn btn-primary form-control">
                                                <i class="bi bi-plus-circle"></i> &nbspUpdate
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial"></partial>
}
