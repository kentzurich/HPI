<partial name="Admin/_AdminSidebar" />

<div class="pagetitle">
    <h1>Frequently Asked Question Section</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">Frequently Asked Question</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow border-0 mt-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">FAQ List</h5>
                        </div>

                        <div class="col-6 text-end">
                            <a asp-controller="FAQSection" asp-action="Upsert" class="btn btn-primary mt-3">
                                <i class="bi bi-plus-circle"></i> &nbspAdd New FAQ
                            </a>
                        </div>
                    </div>
                    </br></br>

                    <table id="tblFAQ" class="table table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Question</th>
                                <th scope="col">Answer</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script src="~/js/admin/faq.js"></script>
